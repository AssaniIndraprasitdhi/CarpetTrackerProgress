@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-header">
    <h1 class="page-title">Dashboard</h1>
    <a asp-controller="Orders" asp-action="Create" class="btn btn-primary btn-lg">+ Create New Order</a>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body stat-card">
                <div class="stat-value text-primary" style="font-size: 2.5rem;">Track</div>
                <div class="stat-label">Progress Tracking</div>
                <p class="mt-3 mb-0" style="color: var(--gray-500); font-size: 0.9375rem; line-height: 1.6;">Draw or upload images to track carpet completion progress pixel by pixel.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body stat-card">
                <div class="stat-value text-success" style="font-size: 2.5rem;">Draw</div>
                <div class="stat-label">Canvas Drawing</div>
                <p class="mt-3 mb-0" style="color: var(--gray-500); font-size: 0.9375rem; line-height: 1.6;">Use the built-in canvas to mark completed areas with custom brush sizes and colors.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body stat-card">
                <div class="stat-value text-warning" style="font-size: 2.5rem;">Compare</div>
                <div class="stat-label">Image Comparison</div>
                <p class="mt-3 mb-0" style="color: var(--gray-500); font-size: 0.9375rem; line-height: 1.6;">Upload progress photos and automatically calculate completion percentage.</p>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">Quick Start</div>
    <div class="card-body">
        <div class="row g-4">
            <div class="col-md-6">
                <h5 style="font-weight: 700; color: var(--gray-800); margin-bottom: 1rem;">Getting Started</h5>
                <ol class="instructions-list" style="color: var(--gray-600);">
                    <li>Create a new order with a base image</li>
                    <li>The base image defines the standard dimensions</li>
                    <li>Choose between overlay or diff mode</li>
                    <li>Track progress using draw or upload methods</li>
                </ol>
            </div>
            <div class="col-md-6">
                <h5 style="font-weight: 700; color: var(--gray-800); margin-bottom: 1rem;">Progress Modes</h5>
                <div class="mb-3 d-flex align-items-start gap-2">
                    <span class="badge badge-overlay">Overlay Mode</span>
                    <span style="color: var(--gray-500); font-size: 0.875rem;">Counts pixels with alpha &gt; 10 as completed</span>
                </div>
                <div class="d-flex align-items-start gap-2">
                    <span class="badge badge-diff">Diff Mode</span>
                    <span style="color: var(--gray-500); font-size: 0.875rem;">Counts pixels where color distance &gt; 30 as completed</span>
                </div>
            </div>
        </div>
    </div>
</div>
