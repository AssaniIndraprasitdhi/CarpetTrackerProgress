@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-header">
    <h1 class="page-title">Dashboard</h1>
    <a asp-controller="Orders" asp-action="Create" class="btn btn-primary btn-lg">+ Create New Order</a>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body stat-card">
                <div class="stat-value text-primary">Track</div>
                <div class="stat-label">Progress Tracking</div>
                <p class="mt-3 text-muted mb-0">Draw or upload images to track carpet completion progress pixel by pixel.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body stat-card">
                <div class="stat-value text-success">Draw</div>
                <div class="stat-label">Canvas Drawing</div>
                <p class="mt-3 text-muted mb-0">Use the built-in canvas to mark completed areas with custom brush sizes and colors.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body stat-card">
                <div class="stat-value text-warning">Compare</div>
                <div class="stat-label">Image Comparison</div>
                <p class="mt-3 text-muted mb-0">Upload progress photos and automatically calculate completion percentage.</p>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <span>Quick Start</span>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5 class="mb-3">Getting Started</h5>
                <ol class="instructions-list">
                    <li>Create a new order with a base image</li>
                    <li>The base image defines the standard dimensions</li>
                    <li>Choose between overlay or diff mode</li>
                    <li>Track progress using draw or upload methods</li>
                </ol>
            </div>
            <div class="col-md-6">
                <h5 class="mb-3">Progress Modes</h5>
                <div class="mb-3">
                    <span class="badge badge-overlay me-2">Overlay Mode</span>
                    <span class="text-muted">Counts pixels with alpha &gt; 10 as completed</span>
                </div>
                <div>
                    <span class="badge badge-diff me-2">Diff Mode</span>
                    <span class="text-muted">Counts pixels where color distance &gt; 30 as completed</span>
                </div>
            </div>
        </div>
    </div>
</div>
