<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - Carpet Progress Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --primary: #6366f1;
            --primary-hover: #4f46e5;
            --primary-light: #eef2ff;
            --success: #22c55e;
            --success-hover: #16a34a;
            --success-light: #f0fdf4;
            --warning: #f59e0b;
            --warning-hover: #d97706;
            --warning-light: #fffbeb;
            --danger: #ef4444;
            --danger-hover: #dc2626;
            --danger-light: #fef2f2;
            --info: #0ea5e9;
            --info-hover: #0284c7;
            --info-light: #f0f9ff;
            --dark: #0f172a;
            --gray-50: #f8fafc;
            --gray-100: #f1f5f9;
            --gray-200: #e2e8f0;
            --gray-300: #cbd5e1;
            --gray-400: #94a3b8;
            --gray-500: #64748b;
            --gray-600: #475569;
            --gray-700: #334155;
            --gray-800: #1e293b;
            --gray-900: #0f172a;
            --radius-sm: 6px;
            --radius: 10px;
            --radius-lg: 14px;
            --radius-xl: 18px;
            --shadow-xs: 0 1px 2px rgba(0, 0, 0, 0.04);
            --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.06), 0 1px 2px rgba(0, 0, 0, 0.04);
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.07), 0 2px 4px -2px rgba(0, 0, 0, 0.05);
            --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.08), 0 4px 6px -4px rgba(0, 0, 0, 0.04);
            --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.08), 0 8px 10px -6px rgba(0, 0, 0, 0.04);
        }

        * {
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        body {
            background-color: var(--gray-50);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
            color: var(--gray-800);
            line-height: 1.6;
        }

        .navbar {
            background: var(--gray-900) !important;
            box-shadow: var(--shadow-sm);
            padding: 0.875rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.125rem;
            letter-spacing: -0.02em;
            color: #fff !important;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            font-size: 0.9375rem;
            color: var(--gray-300) !important;
            padding: 0.625rem 1rem;
            border-radius: var(--radius);
            transition: all 0.15s ease;
        }

        .navbar-nav .nav-link:hover {
            color: #fff !important;
            background: rgba(255, 255, 255, 0.08);
        }

        .navbar .btn-primary {
            background: var(--primary);
            border: none;
            font-weight: 600;
            font-size: 0.875rem;
            padding: 0.5rem 1rem;
            border-radius: var(--radius);
        }

        .navbar .btn-primary:hover {
            background: var(--primary-hover);
        }

        .card {
            background: #fff;
            border: 1px solid var(--gray-200);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-sm);
            overflow: hidden;
        }

        .card-header {
            background: var(--gray-800);
            color: #fff;
            font-weight: 600;
            font-size: 0.9375rem;
            padding: 1rem 1.5rem;
            border-bottom: none;
            letter-spacing: -0.01em;
        }

        .card-header-light {
            background: var(--gray-50);
            color: var(--gray-800);
            border-bottom: 1px solid var(--gray-200);
        }

        .card-body {
            padding: 1.5rem;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.75rem;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .page-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--gray-900);
            margin: 0;
            letter-spacing: -0.025em;
            line-height: 1.2;
        }

        .btn {
            font-weight: 600;
            font-size: 0.9375rem;
            padding: 0.625rem 1.25rem;
            border-radius: var(--radius);
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            min-height: 44px;
            transition: all 0.15s ease;
        }

        .btn svg {
            flex-shrink: 0;
        }

        .btn-primary {
            background: var(--primary);
            color: #fff;
        }

        .btn-primary:hover {
            background: var(--primary-hover);
            color: #fff;
        }

        .btn-success {
            background: var(--success);
            color: #fff;
        }

        .btn-success:hover {
            background: var(--success-hover);
            color: #fff;
        }

        .btn-warning {
            background: var(--warning);
            color: #fff;
        }

        .btn-warning:hover {
            background: var(--warning-hover);
            color: #fff;
        }

        .btn-info {
            background: var(--info);
            color: #fff;
        }

        .btn-info:hover {
            background: var(--info-hover);
            color: #fff;
        }

        .btn-danger {
            background: var(--danger);
            color: #fff;
        }

        .btn-danger:hover {
            background: var(--danger-hover);
            color: #fff;
        }

        .btn-outline-secondary {
            background: #fff;
            border: 1px solid var(--gray-300);
            color: var(--gray-700);
        }

        .btn-outline-secondary:hover {
            background: var(--gray-100);
            border-color: var(--gray-400);
            color: var(--gray-800);
        }

        .btn-outline-danger {
            background: #fff;
            border: 1px solid var(--danger);
            color: var(--danger);
        }

        .btn-outline-danger:hover {
            background: var(--danger);
            color: #fff;
        }

        .btn-outline-light {
            background: transparent;
            border: 1px solid rgba(255, 255, 255, 0.3);
            color: #fff;
        }

        .btn-outline-light:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.5);
            color: #fff;
        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            min-height: 52px;
        }

        .btn-sm {
            padding: 0.375rem 0.75rem;
            font-size: 0.8125rem;
            min-height: 36px;
        }

        .progress {
            height: 1.25rem;
            background: var(--gray-200);
            border-radius: 999px;
            overflow: hidden;
        }

        .progress-bar {
            background: linear-gradient(90deg, var(--primary) 0%, #818cf8 100%);
            font-weight: 600;
            font-size: 0.75rem;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: width 0.4s ease;
        }

        .progress-bar.bg-success {
            background: linear-gradient(90deg, var(--success) 0%, #4ade80 100%);
        }

        .progress-lg {
            height: 2rem;
        }

        .progress-lg .progress-bar {
            font-size: 0.875rem;
        }

        .badge {
            font-weight: 600;
            font-size: 0.75rem;
            padding: 0.375rem 0.75rem;
            border-radius: var(--radius-sm);
            letter-spacing: 0.01em;
        }

        .badge-overlay {
            background: linear-gradient(135deg, var(--info) 0%, #38bdf8 100%);
            color: #fff;
        }

        .badge-diff {
            background: linear-gradient(135deg, var(--warning) 0%, #fbbf24 100%);
            color: #fff;
        }

        .table {
            margin-bottom: 0;
        }

        .table thead th {
            font-weight: 600;
            font-size: 0.6875rem;
            text-transform: uppercase;
            letter-spacing: 0.06em;
            color: var(--gray-500);
            border-bottom: 1px solid var(--gray-200);
            padding: 1rem 1.25rem;
            background: var(--gray-50);
        }

        .table tbody td {
            padding: 1rem 1.25rem;
            vertical-align: middle;
            border-bottom: 1px solid var(--gray-100);
            color: var(--gray-700);
        }

        .table-hover tbody tr:hover {
            background: var(--gray-50);
        }

        .table-borderless td,
        .table-borderless th {
            border: none;
            padding: 0.625rem 0;
        }

        .stat-card {
            text-align: center;
            padding: 2rem 1.5rem;
        }

        .stat-value {
            font-size: 3.5rem;
            font-weight: 800;
            line-height: 1;
            margin-bottom: 0.5rem;
            letter-spacing: -0.03em;
        }

        .stat-label {
            font-size: 0.8125rem;
            font-weight: 600;
            color: var(--gray-500);
            text-transform: uppercase;
            letter-spacing: 0.08em;
        }

        .thumbnail {
            max-width: 80px;
            max-height: 80px;
            object-fit: cover;
            border-radius: var(--radius);
            border: 2px solid var(--gray-200);
        }

        .image-preview {
            max-width: 100%;
            max-height: 400px;
            object-fit: contain;
            border-radius: var(--radius);
        }

        .checkerboard-bg {
            background-image: linear-gradient(45deg, var(--gray-200) 25%, transparent 25%),
                              linear-gradient(-45deg, var(--gray-200) 25%, transparent 25%),
                              linear-gradient(45deg, transparent 75%, var(--gray-200) 75%),
                              linear-gradient(-45deg, transparent 75%, var(--gray-200) 75%);
            background-size: 16px 16px;
            background-position: 0 0, 0 8px, 8px -8px, -8px 0px;
            background-color: #fff;
            padding: 1rem;
            border-radius: var(--radius);
            display: inline-block;
        }

        .checkerboard-bg img {
            display: block;
            border-radius: var(--radius-sm);
        }

        .checkerboard-bg-sm {
            background-image: linear-gradient(45deg, var(--gray-200) 25%, transparent 25%),
                              linear-gradient(-45deg, var(--gray-200) 25%, transparent 25%),
                              linear-gradient(45deg, transparent 75%, var(--gray-200) 75%),
                              linear-gradient(-45deg, transparent 75%, var(--gray-200) 75%);
            background-size: 8px 8px;
            background-position: 0 0, 0 4px, 4px -4px, -4px 0px;
            background-color: #fff;
            padding: 4px;
            border-radius: var(--radius-sm);
        }

        .checkerboard-bg-sm img {
            display: block;
            border-radius: 4px;
        }

        .overlay-white-bg {
            background: #fff;
            padding: 1rem;
            border-radius: var(--radius);
            display: inline-block;
            box-shadow: inset 0 0 0 1px var(--gray-200);
        }

        .overlay-white-bg img {
            display: block;
            border-radius: var(--radius-sm);
        }

        .overlay-white-bg-sm {
            background: #fff;
            padding: 4px;
            border-radius: var(--radius-sm);
            box-shadow: inset 0 0 0 1px var(--gray-200);
        }

        .overlay-white-bg-sm img {
            display: block;
            border-radius: 4px;
        }

        .overlay-placeholder {
            background: var(--gray-100);
            border: 2px dashed var(--gray-300);
            border-radius: var(--radius);
            min-height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .canvas-container {
            position: relative;
            border: 2px solid var(--gray-800);
            border-radius: var(--radius);
            display: inline-block;
            overflow: hidden;
            background: #fff;
        }

        .canvas-overlay {
            position: absolute;
            top: 0;
            left: 0;
            cursor: crosshair;
        }

        .form-label {
            font-weight: 600;
            font-size: 0.875rem;
            color: var(--gray-700);
            margin-bottom: 0.5rem;
        }

        .form-control,
        .form-select {
            border-radius: var(--radius);
            border: 1px solid var(--gray-300);
            padding: 0.75rem 1rem;
            font-size: 0.9375rem;
            min-height: 48px;
            transition: all 0.15s ease;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
            outline: none;
        }

        .form-control::placeholder {
            color: var(--gray-400);
        }

        .form-text {
            font-size: 0.8125rem;
            color: var(--gray-500);
            margin-top: 0.5rem;
        }

        .alert {
            border: none;
            border-radius: var(--radius);
            font-weight: 500;
            padding: 1rem 1.25rem;
        }

        .alert-success {
            background: var(--success-light);
            color: var(--success-hover);
        }

        .alert-danger {
            background: var(--danger-light);
            color: var(--danger-hover);
        }

        .alert-info {
            background: var(--info-light);
            color: var(--info-hover);
        }

        .empty-state {
            text-align: center;
            padding: 3rem 2rem;
        }

        .empty-state-icon {
            font-size: 3.5rem;
            margin-bottom: 1rem;
            opacity: 0.7;
        }

        .empty-state h4,
        .empty-state h5 {
            font-weight: 700;
            color: var(--gray-800);
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: var(--gray-500);
        }

        .action-buttons {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
        }

        footer {
            background: #fff;
            border-top: 1px solid var(--gray-200);
            margin-top: auto;
        }

        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(15, 23, 42, 0.75);
            backdrop-filter: blur(6px);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .loading-overlay.active {
            display: flex;
        }

        .loading-content {
            background: #fff;
            padding: 2.5rem 3.5rem;
            border-radius: var(--radius-xl);
            text-align: center;
            box-shadow: var(--shadow-lg);
        }

        .loading-spinner {
            width: 44px;
            height: 44px;
            border: 3px solid var(--gray-200);
            border-top-color: var(--primary);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin: 0 auto 1.25rem;
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }

        .loading-text {
            font-size: 1rem;
            font-weight: 600;
            color: var(--gray-700);
            margin: 0;
        }

        .btn-loading {
            position: relative;
            pointer-events: none;
            opacity: 0.7;
        }

        .btn-loading .btn-text {
            visibility: hidden;
        }

        .btn-loading::after {
            content: "";
            position: absolute;
            width: 18px;
            height: 18px;
            top: 50%;
            left: 50%;
            margin: -9px 0 0 -9px;
            border: 2px solid transparent;
            border-top-color: currentColor;
            border-radius: 50%;
            animation: spin 0.7s linear infinite;
        }

        .tools-bar {
            display: flex;
            align-items: center;
            gap: 1rem;
            flex-wrap: nowrap;
            padding: 0.75rem 1rem;
            background: var(--gray-100);
            border-radius: var(--radius);
        }

        .tool-group {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            flex-shrink: 0;
        }

        .tool-group-size {
            flex-shrink: 1;
            min-width: 0;
        }

        .tool-group-size .form-range {
            min-width: 60px;
            width: 100px;
        }

        .tool-label {
            font-size: 0.8125rem;
            font-weight: 600;
            color: var(--gray-500);
            white-space: nowrap;
        }

        .brush-size-value {
            min-width: 28px;
            text-align: right;
            display: inline-block;
            font-weight: 700;
            color: var(--gray-800);
        }

        .instructions-list {
            padding-left: 1.25rem;
            margin: 0;
        }

        .instructions-list li {
            padding: 0.5rem 0;
            color: var(--gray-600);
        }

        .filters-bar {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
        }

        .search-box {
            position: relative;
            flex: 1;
            min-width: 200px;
            max-width: 320px;
        }

        .search-box svg {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray-400);
            pointer-events: none;
        }

        .search-box .form-control {
            padding-left: 2.75rem;
        }

        .filter-tabs {
            display: flex;
            background: var(--gray-200);
            border-radius: var(--radius);
            padding: 4px;
        }

        .filter-tab {
            background: transparent;
            border: none;
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--gray-500);
            border-radius: var(--radius-sm);
            cursor: pointer;
            transition: all 0.15s ease;
            min-height: 36px;
        }

        .filter-tab:hover {
            color: var(--gray-700);
        }

        .filter-tab.active {
            background: #fff;
            color: var(--gray-800);
            box-shadow: var(--shadow-xs);
        }

        .orders-count {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--gray-500);
            margin-left: auto;
        }

        .orders-list {
            display: flex;
            flex-direction: column;
            gap: 0.875rem;
        }

        .order-card {
            display: flex;
            align-items: center;
            gap: 1.25rem;
            background: #fff;
            border: 1px solid var(--gray-200);
            border-radius: var(--radius-lg);
            padding: 1.25rem;
            transition: all 0.15s ease;
        }

        .order-card:hover {
            border-color: var(--gray-300);
            box-shadow: var(--shadow);
        }

        .order-preview {
            width: 72px;
            height: 72px;
            border-radius: var(--radius);
            overflow: hidden;
            flex-shrink: 0;
            background: var(--gray-100);
        }

        .order-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .order-preview .no-preview {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--gray-400);
        }

        .order-info {
            flex: 1;
            min-width: 0;
        }

        .order-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.25rem;
        }

        .order-title {
            font-size: 1.0625rem;
            font-weight: 700;
            color: var(--gray-800);
            text-decoration: none;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .order-title:hover {
            color: var(--primary);
        }

        .order-meta {
            font-size: 0.8125rem;
            color: var(--gray-500);
            margin-bottom: 0.75rem;
        }

        .order-meta .separator {
            margin: 0 0.5rem;
            opacity: 0.5;
        }

        .order-progress {
            max-width: 260px;
        }

        .progress-display {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .progress-badge {
            font-size: 0.8125rem;
            font-weight: 700;
            padding: 0.25rem 0.625rem;
            border-radius: var(--radius-sm);
            min-width: 52px;
            text-align: center;
            white-space: nowrap;
        }

        .progress-badge.low {
            background: var(--warning-light);
            color: var(--warning-hover);
        }

        .progress-badge.medium {
            background: var(--info-light);
            color: var(--info-hover);
        }

        .progress-badge.high {
            background: var(--success-light);
            color: var(--success-hover);
        }

        .progress-badge.complete {
            background: var(--success);
            color: #fff;
        }

        .progress-bar-container {
            flex: 1;
            height: 6px;
            background: var(--gray-200);
            border-radius: 3px;
            overflow: hidden;
            min-width: 80px;
        }

        .progress-bar-fill {
            height: 100%;
            border-radius: 3px;
            transition: width 0.3s ease;
        }

        .progress-bar-fill.low {
            background: linear-gradient(90deg, var(--warning) 0%, #fbbf24 100%);
        }

        .progress-bar-fill.medium {
            background: linear-gradient(90deg, var(--info) 0%, #38bdf8 100%);
        }

        .progress-bar-fill.high {
            background: linear-gradient(90deg, var(--success) 0%, #4ade80 100%);
        }

        .progress-bar-fill.complete {
            background: linear-gradient(90deg, #059669 0%, var(--success) 100%);
        }

        .order-actions {
            display: flex;
            gap: 0.5rem;
            flex-shrink: 0;
        }

        .action-btn {
            width: 42px;
            height: 42px;
            border-radius: var(--radius);
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--gray-100);
            color: var(--gray-500);
            text-decoration: none;
            transition: all 0.15s ease;
        }

        .action-btn:hover {
            background: var(--gray-200);
            color: var(--gray-700);
        }

        .action-btn-success {
            background: var(--success-light);
            color: var(--success);
        }

        .action-btn-success:hover {
            background: #dcfce7;
            color: var(--success-hover);
        }

        .action-btn-info {
            background: var(--info-light);
            color: var(--info);
        }

        .action-btn-info:hover {
            background: #e0f2fe;
            color: var(--info-hover);
        }

        .form-control,
        .form-select {
            min-height: 48px;
        }

        .form-range {
            height: 44px;
        }

        .nav-link {
            min-height: 44px;
            display: flex;
            align-items: center;
        }

        .canvas-touch {
            touch-action: none;
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            user-select: none;
        }

        .tool-btn {
            min-height: 42px;
            min-width: 42px;
            padding: 0.5rem 0.75rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .tool-btn.active {
            box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.15);
        }

        .tool-btn svg {
            flex-shrink: 0;
        }

        .btn-group .tool-btn:not(:first-child) {
            border-left: 1px solid rgba(255, 255, 255, 0.15);
        }

        .icon-btn {
            min-height: 42px;
            min-width: 42px;
            padding: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .icon-btn svg {
            flex-shrink: 0;
        }

        .save-btn {
            min-height: 42px;
            padding: 0.5rem 1.25rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
            font-size: 0.9375rem;
        }

        .save-btn svg {
            flex-shrink: 0;
        }

        .save-btn.saving {
            opacity: 0.7;
            pointer-events: none;
        }

        .color-picker {
            width: 42px;
            height: 42px;
            padding: 3px;
            border: 2px solid var(--gray-300);
            border-radius: var(--radius);
            cursor: pointer;
            background: transparent;
            transition: all 0.15s ease;
        }

        .color-picker:hover {
            border-color: var(--gray-400);
        }

        .color-picker::-webkit-color-swatch-wrapper {
            padding: 0;
        }

        .color-picker::-webkit-color-swatch {
            border: none;
            border-radius: 4px;
        }

        .spin {
            animation: spin 0.8s linear infinite;
        }

        .pagination-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;
            margin-top: 1.5rem;
            padding: 1rem 1.25rem;
            background: #fff;
            border: 1px solid var(--gray-200);
            border-radius: var(--radius-lg);
            flex-wrap: wrap;
        }

        .pagination-info {
            font-size: 0.875rem;
            color: var(--gray-500);
            white-space: nowrap;
        }

        .pagination-controls {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .pagination-btn {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.5rem 0.875rem;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--gray-700);
            background: var(--gray-100);
            border-radius: var(--radius);
            text-decoration: none;
            transition: all 0.15s ease;
            min-height: 40px;
        }

        .pagination-btn:hover {
            background: var(--gray-200);
            color: var(--gray-800);
        }

        .pagination-btn.disabled {
            color: var(--gray-400);
            pointer-events: none;
            opacity: 0.5;
        }

        .pagination-pages {
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .pagination-page {
            min-width: 38px;
            height: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--gray-500);
            background: transparent;
            border-radius: var(--radius);
            text-decoration: none;
            transition: all 0.15s ease;
        }

        .pagination-page:hover {
            background: var(--gray-100);
            color: var(--gray-700);
        }

        .pagination-page.active {
            background: var(--primary);
            color: #fff;
        }

        .pagination-ellipsis {
            min-width: 32px;
            text-align: center;
            color: var(--gray-400);
            font-weight: 600;
        }

        .pagination-size {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            color: var(--gray-500);
        }

        .pagination-size .form-select {
            width: auto;
            min-height: 38px;
            padding: 0.375rem 2rem 0.375rem 0.75rem;
            font-size: 0.875rem;
        }

        .toast-container {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 10000;
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            max-width: 380px;
            width: calc(100% - 2rem);
        }

        .toast {
            display: flex;
            align-items: flex-start;
            gap: 0.875rem;
            padding: 1rem 1.25rem;
            background: #fff;
            border: 1px solid var(--gray-200);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
            transform: translateX(120%);
            opacity: 0;
            transition: transform 0.25s ease, opacity 0.25s ease;
        }

        .toast.show {
            transform: translateX(0);
            opacity: 1;
        }

        .toast.hide {
            transform: translateX(120%);
            opacity: 0;
        }

        .toast-icon {
            flex-shrink: 0;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            font-weight: bold;
            color: #fff;
        }

        .toast-success .toast-icon {
            background: var(--success);
        }

        .toast-error .toast-icon {
            background: var(--danger);
        }

        .toast-info .toast-icon {
            background: var(--info);
        }

        .toast-content {
            flex: 1;
            min-width: 0;
        }

        .toast-title {
            font-weight: 700;
            font-size: 0.9375rem;
            color: var(--gray-800);
            margin-bottom: 0.125rem;
        }

        .toast-message {
            font-size: 0.8125rem;
            color: var(--gray-500);
            word-wrap: break-word;
            line-height: 1.5;
        }

        .toast-close {
            flex-shrink: 0;
            background: none;
            border: none;
            font-size: 1.25rem;
            color: var(--gray-400);
            cursor: pointer;
            padding: 0;
            width: 32px;
            height: 32px;
            min-width: 32px;
            min-height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: var(--radius-sm);
            transition: background-color 0.15s ease;
            -webkit-tap-highlight-color: transparent;
        }

        .toast-close:hover,
        .toast-close:active {
            background: var(--gray-100);
            color: var(--gray-600);
        }

        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(15, 23, 42, 0.6);
            backdrop-filter: blur(4px);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 10001;
            padding: 1rem;
            overscroll-behavior: contain;
        }

        .modal-overlay.active {
            display: flex;
        }

        body.modal-open {
            overflow: hidden;
            touch-action: none;
        }

        .modal-dialog {
            background: #fff;
            border-radius: var(--radius-xl);
            box-shadow: var(--shadow-lg);
            max-width: 400px;
            width: 100%;
            transform: scale(0.95);
            opacity: 0;
            transition: transform 0.2s ease, opacity 0.2s ease;
        }

        .modal-overlay.active .modal-dialog {
            transform: scale(1);
            opacity: 1;
        }

        .modal-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.5rem 1.5rem 0;
        }

        .modal-icon {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            font-weight: 700;
            flex-shrink: 0;
        }

        .modal-icon-warning {
            background: var(--warning-light);
            color: var(--warning-hover);
        }

        .modal-icon-danger {
            background: var(--danger-light);
            color: var(--danger);
        }

        .modal-icon-info {
            background: var(--info-light);
            color: var(--info);
        }

        .modal-title {
            font-size: 1.125rem;
            font-weight: 700;
            color: var(--gray-900);
            margin: 0;
        }

        .modal-body {
            padding: 1rem 1.5rem 1.5rem;
            color: var(--gray-600);
            font-size: 0.9375rem;
            line-height: 1.6;
        }

        .modal-footer {
            display: flex;
            gap: 0.75rem;
            padding: 0 1.5rem 1.5rem;
        }

        .modal-footer .btn {
            flex: 1;
            min-height: 48px;
            font-size: 0.9375rem;
            font-weight: 600;
            -webkit-tap-highlight-color: transparent;
        }

        @@media (max-width: 768px) {
            .pagination-container {
                flex-direction: column;
                align-items: stretch;
                gap: 1rem;
            }

            .pagination-info {
                text-align: center;
                order: 3;
            }

            .pagination-controls {
                justify-content: center;
                order: 1;
            }

            .pagination-pages {
                display: none;
            }

            .pagination-size {
                justify-content: center;
                order: 2;
            }
        }

        @@media (max-width: 1024px) {
            .page-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .action-buttons {
                width: 100%;
            }

            .action-buttons .btn {
                flex: 1;
            }

            .tool-group {
                width: 100%;
                justify-content: space-between;
            }

            .tool-group .btn-group {
                flex: 1;
            }

            .tool-group .btn-group .tool-btn {
                flex: 1;
            }

            .tools-bar {
                flex-direction: column;
                gap: 0.75rem;
            }

            .tool-group.ms-auto {
                margin-left: 0 !important;
                width: 100%;
            }

            .tool-group.ms-auto .save-btn {
                width: 100%;
                justify-content: center;
            }

            .filters-bar {
                flex-direction: column;
                align-items: stretch;
            }

            .search-box {
                max-width: none;
            }

            .filter-tabs {
                justify-content: center;
            }

            .orders-count {
                margin-left: 0;
                text-align: center;
            }

            .order-card {
                flex-wrap: wrap;
            }

            .order-preview {
                width: 56px;
                height: 56px;
            }

            .order-info {
                flex: 1;
                min-width: calc(100% - 140px);
            }

            .order-progress {
                max-width: none;
                width: 100%;
            }

            .order-actions {
                width: 100%;
                justify-content: flex-end;
                margin-top: 0.75rem;
                padding-top: 0.75rem;
                border-top: 1px solid var(--gray-200);
            }
        }

        @@media (min-width: 768px) and (max-width: 1024px) and (orientation: portrait) {
            .col-lg-6 {
                width: 100%;
            }

            .stat-value {
                font-size: 2.75rem;
            }

            .btn-lg {
                width: 100%;
                padding: 1rem 1.5rem;
            }
        }

        @@media (min-width: 768px) and (max-width: 1024px) and (orientation: landscape) {
            .container {
                max-width: 100%;
                padding-left: 2rem;
                padding-right: 2rem;
            }
        }

        @@media (hover: none) and (pointer: coarse) {
            .card:hover {
                box-shadow: var(--shadow-sm);
            }

            .btn-lg {
                padding: 0.875rem 1.5rem;
                font-size: 1rem;
            }
        }

        @@media (max-width: 480px) {
            .toast-container {
                top: 0.5rem;
                right: 0.5rem;
                left: 0.5rem;
                width: auto;
                max-width: none;
            }

            .modal-footer {
                flex-direction: column-reverse;
            }

            .modal-footer .btn {
                width: 100%;
                min-height: 52px;
            }
        }

        @@media (min-width: 768px) and (max-width: 1024px) {
            .modal-footer .btn {
                min-height: 52px;
            }

            .modal-dialog {
                max-width: 440px;
            }
        }
    </style>
</head>
<body>
    <div id="loadingOverlay" class="loading-overlay">
        <div class="loading-content">
            <div class="loading-spinner"></div>
            <p id="loadingText" class="loading-text">Processing...</p>
        </div>
    </div>

    <div id="toastContainer" class="toast-container"></div>

    <div id="confirmModal" class="modal-overlay">
        <div class="modal-dialog">
            <div class="modal-header">
                <div id="confirmModalIcon" class="modal-icon modal-icon-warning">!</div>
                <h3 id="confirmModalTitle" class="modal-title">Confirm Action</h3>
            </div>
            <div id="confirmModalBody" class="modal-body">
                Are you sure you want to proceed?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" id="confirmModalCancel">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmModalConfirm">Confirm</button>
            </div>
        </div>
    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark mb-4">
            <div class="container">
                <a class="navbar-brand" asp-controller="Orders" asp-action="Index">Carpet Progress Tracker</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Orders" asp-action="Index">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-sm btn-primary text-white ms-2 px-3" asp-controller="Orders" asp-action="Create">+ New Order</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-4">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4">
                    <strong>Error:</strong> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4">
                    <strong>Success:</strong> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show mb-4">
                    <strong>Notice:</strong> @TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted mt-5 py-4">
        <div class="container text-center">
            <span class="text-secondary">Carpet Progress Tracker</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showLoading(text) {
            document.getElementById('loadingText').textContent = text || 'Processing...';
            document.getElementById('loadingOverlay').classList.add('active');
        }
        function hideLoading() {
            document.getElementById('loadingOverlay').classList.remove('active');
        }
        function setButtonLoading(btn, loading) {
            if (loading) {
                btn.classList.add('btn-loading');
                btn.disabled = true;
            } else {
                btn.classList.remove('btn-loading');
                btn.disabled = false;
            }
        }
        document.querySelectorAll('form[data-loading]').forEach(function(form) {
            form.addEventListener('submit', function() {
                var text = this.getAttribute('data-loading');
                showLoading(text);
            });
        });

        function showToast(type, title, message, duration) {
            var container = document.getElementById('toastContainer');
            if (!container) return;

            var toast = document.createElement('div');
            toast.className = 'toast toast-' + type;

            var icons = { success: '✓', error: '✕', info: 'i' };
            var icon = icons[type] || 'i';

            toast.innerHTML =
                '<div class="toast-icon">' + icon + '</div>' +
                '<div class="toast-content">' +
                    '<div class="toast-title">' + title + '</div>' +
                    '<div class="toast-message">' + message + '</div>' +
                '</div>' +
                '<button type="button" class="toast-close" aria-label="Close">×</button>';

            container.appendChild(toast);

            requestAnimationFrame(function() {
                toast.classList.add('show');
            });

            var closeBtn = toast.querySelector('.toast-close');
            closeBtn.addEventListener('click', function() {
                dismissToast(toast);
            });

            if (type === 'error') {
                return;
            }

            var timeout = duration || (type === 'success' ? 4000 : 5000);
            setTimeout(function() {
                dismissToast(toast);
            }, timeout);
        }

        function dismissToast(toast) {
            if (!toast || toast.classList.contains('hide')) return;
            toast.classList.remove('show');
            toast.classList.add('hide');
            setTimeout(function() {
                if (toast.parentNode) {
                    toast.parentNode.removeChild(toast);
                }
            }, 300);
        }

        function showSuccessToast(title, message, duration) {
            showToast('success', title, message, duration);
        }

        function showErrorToast(title, message, duration) {
            showToast('error', title, message, duration);
        }

        function showInfoToast(title, message, duration) {
            showToast('info', title, message, duration);
        }

        var confirmModalCallback = null;
        var confirmModalCancelCallback = null;

        function showConfirmModal(options) {
            var modal = document.getElementById('confirmModal');
            if (!modal) {
                if (window.confirm(options.message || 'Are you sure?')) {
                    if (options.onConfirm) options.onConfirm();
                } else {
                    if (options.onCancel) options.onCancel();
                }
                return;
            }

            var title = document.getElementById('confirmModalTitle');
            var body = document.getElementById('confirmModalBody');
            var icon = document.getElementById('confirmModalIcon');
            var confirmBtn = document.getElementById('confirmModalConfirm');

            title.textContent = options.title || 'Confirm Action';
            body.textContent = options.message || 'Are you sure you want to proceed?';

            icon.className = 'modal-icon';
            if (options.type === 'danger') {
                icon.classList.add('modal-icon-danger');
                icon.textContent = '!';
                confirmBtn.className = 'btn btn-danger';
            } else if (options.type === 'info') {
                icon.classList.add('modal-icon-info');
                icon.textContent = '?';
                confirmBtn.className = 'btn btn-primary';
            } else {
                icon.classList.add('modal-icon-warning');
                icon.textContent = '!';
                confirmBtn.className = 'btn btn-warning';
            }

            confirmBtn.textContent = options.confirmText || 'Confirm';
            document.getElementById('confirmModalCancel').textContent = options.cancelText || 'Cancel';

            confirmModalCallback = options.onConfirm || null;
            confirmModalCancelCallback = options.onCancel || null;

            document.body.classList.add('modal-open');
            modal.classList.add('active');

            setTimeout(function() {
                confirmBtn.focus();
            }, 100);
        }

        function hideConfirmModal() {
            var modal = document.getElementById('confirmModal');
            if (modal) {
                modal.classList.remove('active');
            }
            document.body.classList.remove('modal-open');
            confirmModalCallback = null;
            confirmModalCancelCallback = null;
        }

        document.getElementById('confirmModalConfirm').addEventListener('click', function() {
            var callback = confirmModalCallback;
            hideConfirmModal();
            if (callback) {
                callback();
            }
        });

        document.getElementById('confirmModalCancel').addEventListener('click', function() {
            var callback = confirmModalCancelCallback;
            hideConfirmModal();
            if (callback) {
                callback();
            }
        });

        document.getElementById('confirmModal').addEventListener('click', function(e) {
            if (e.target === this) {
                var callback = confirmModalCancelCallback;
                hideConfirmModal();
                if (callback) {
                    callback();
                }
            }
        });

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                var modal = document.getElementById('confirmModal');
                if (modal && modal.classList.contains('active')) {
                    var callback = confirmModalCancelCallback;
                    hideConfirmModal();
                    if (callback) {
                        callback();
                    }
                }
            }
        });

        document.querySelectorAll('[data-confirm]').forEach(function(el) {
            el.addEventListener('click', function(e) {
                e.preventDefault();
                var message = this.getAttribute('data-confirm');
                var form = this.closest('form');
                var href = this.getAttribute('href');

                showConfirmModal({
                    title: 'Confirm Action',
                    message: message,
                    type: 'danger',
                    confirmText: 'Yes, Continue',
                    cancelText: 'Cancel',
                    onConfirm: function() {
                        if (form) {
                            form.submit();
                        } else if (href) {
                            window.location.href = href;
                        }
                    }
                });
            });
        });

        (function() {
            var successAlert = document.querySelector('.alert-success');
            var errorAlert = document.querySelector('.alert-danger');

            if (successAlert) {
                var message = successAlert.textContent.replace('Success:', '').trim();
                successAlert.style.display = 'none';
                setTimeout(function() {
                    showSuccessToast('Success', message);
                }, 100);
            }

            if (errorAlert) {
                var message = errorAlert.textContent.replace('Error:', '').trim();
                errorAlert.style.display = 'none';
                setTimeout(function() {
                    showErrorToast('Error', message);
                }, 100);
            }
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
