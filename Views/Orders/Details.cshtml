@model CarpetProgressTracker.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Order: @Model.OrderNumber</h1>
    <div>
        <a asp-controller="Progress" asp-action="Draw" asp-route-orderId="@Model.Id" class="btn btn-success">Draw Progress</a>
        <a asp-controller="Progress" asp-action="Upload" asp-route-orderId="@Model.Id" class="btn btn-info">Upload Progress</a>
        <a asp-controller="Compare" asp-action="Index" asp-route-orderId="@Model.Id" class="btn btn-warning">Compare</a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">Order Information</div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th>Order Number:</th>
                        <td>@Model.OrderNumber</td>
                    </tr>
                    <tr>
                        <th>Standard Size:</th>
                        <td>@Model.StandardWidth x @Model.StandardHeight pixels</td>
                    </tr>
                    <tr>
                        <th>Total Pixels:</th>
                        <td>@Model.TotalPixels.ToString("N0")</td>
                    </tr>
                    <tr>
                        <th>Progress Mode:</th>
                        <td><span class="badge @(Model.ProgressMode == "overlay" ? "bg-info" : "bg-warning")">@Model.ProgressMode</span></td>
                    </tr>
                    <tr>
                        <th>Created:</th>
                        <td>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                    <tr>
                        <th>Last Updated:</th>
                        <td>@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">Current Progress</div>
            <div class="card-body">
                <div class="progress progress-bar-custom mb-3">
                    <div class="progress-bar @(Model.CurrentProgress >= 100 ? "bg-success" : "bg-primary")"
                         style="width: @Model.CurrentProgress%">
                        @Model.CurrentProgress%
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">Base Image</div>
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.BaseImageUrl))
                {
                    <img src="@Model.BaseImageUrl" class="img-fluid border" alt="Base Image" />
                }
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
        {
            <div class="card mb-4">
                <div class="card-header">Current Progress Image</div>
                <div class="card-body text-center">
                    <img src="@Model.CurrentImageUrl" class="img-fluid border" alt="Current Progress" />
                </div>
            </div>
        }
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between">
        <span>Progress History</span>
        <a asp-controller="Compare" asp-action="History" asp-route-orderId="@Model.Id" class="btn btn-sm btn-outline-primary">View Full Timeline</a>
    </div>
    <div class="card-body">
        @if (Model.ProgressHistories.Any())
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Progress</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var history in Model.ProgressHistories.Take(5))
                    {
                        <tr>
                            <td>@history.RecordedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>
                                <div class="progress" style="width: 100px;">
                                    <div class="progress-bar" style="width: @history.ProgressPercentage%">@history.ProgressPercentage%</div>
                                </div>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(history.ImageUrl))
                                {
                                    <img src="@history.ImageUrl" class="thumbnail" alt="Progress" style="max-height: 50px;" />
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No progress records yet.</p>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this order?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete Order</button>
    </form>
</div>
