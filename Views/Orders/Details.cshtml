@model CarpetProgressTracker.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="page-header">
    <div>
        <h1 class="page-title">@Model.OrderNumber</h1>
        <div class="mt-1">
            @if (Model.ProgressMode == "overlay")
            {
                <span class="badge badge-overlay">Overlay Mode</span>
            }
            else
            {
                <span class="badge badge-diff">Diff Mode</span>
            }
        </div>
    </div>
    <div class="action-buttons">
        <a asp-controller="Progress" asp-action="Draw" asp-route-orderId="@Model.Id" class="btn btn-success">Draw Progress</a>
        <a asp-controller="Progress" asp-action="Upload" asp-route-orderId="@Model.Id" class="btn btn-info">Upload Progress</a>
        <a asp-controller="Compare" asp-action="Index" asp-route-orderId="@Model.Id" class="btn btn-warning">Compare</a>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">Current Progress</div>
            <div class="card-body stat-card">
                <div class="stat-value @(Model.CurrentProgress >= 100 ? "text-success" : Model.CurrentProgress >= 50 ? "text-primary" : "text-warning")">
                    @Model.CurrentProgress%
                </div>
                <div class="stat-label mb-3">Completion</div>
                <div class="progress progress-lg">
                    <div class="progress-bar @(Model.CurrentProgress >= 100 ? "bg-success" : "")"
                         style="width: @Model.CurrentProgress%">
                        @Model.CurrentProgress%
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Order Information</div>
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tr><td class="text-muted">Order Number</td><td class="fw-bold">@Model.OrderNumber</td></tr>
                    <tr><td class="text-muted">Dimensions</td><td>@Model.StandardWidth Ã— @Model.StandardHeight px</td></tr>
                    <tr><td class="text-muted">Total Pixels</td><td>@Model.TotalPixels.ToString("N0")</td></tr>
                    <tr><td class="text-muted">Created</td><td>@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td></tr>
                    <tr><td class="text-muted">Updated</td><td>@Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</td></tr>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">Base Image</div>
                    <div class="card-body text-center p-4">
                        @if (!string.IsNullOrEmpty(Model.BaseImageUrl))
                        {
                            <img src="@Model.BaseImageUrl" class="img-fluid rounded" />
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">Current Progress (Overlay)</div>
                    <div class="card-body text-center p-4">
                        @if (!string.IsNullOrEmpty(Model.CurrentOverlayUrl))
                        {
                            <div class="checkerboard-bg rounded">
                                <img src="@Model.CurrentOverlayUrl" class="img-fluid rounded" />
                            </div>
                        }
                        else
                        {
                            <div class="overlay-placeholder rounded">
                                <div class="empty-state py-4">
                                    <div class="empty-state-icon">ðŸŽ¨</div>
                                    <h5>No Overlay Yet</h5>
                                    <p class="text-muted mb-3">Start tracking progress by drawing or uploading.</p>
                                    <a asp-controller="Progress" asp-action="Draw" asp-route-orderId="@Model.Id" class="btn btn-success">Start Drawing</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Progress History</span>
        <a asp-controller="Compare" asp-action="History" asp-route-orderId="@Model.Id" class="btn btn-sm btn-outline-light">View Full Timeline</a>
    </div>
    <div class="card-body p-0">
        @if (Model.ProgressHistories.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Progress</th>
                            <th style="width:40%">Visual</th>
                            <th>Preview</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var history in Model.ProgressHistories.Take(5))
                        {
                            <tr>
                                <td>@history.RecordedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td class="fw-bold">@history.ProgressPercentage%</td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar @(history.ProgressPercentage >= 100 ? "bg-success" : "")"
                                             style="width:@history.ProgressPercentage%">
                                            @history.ProgressPercentage%
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(history.OverlayUrl))
                                    {
                                        <div class="checkerboard-bg-sm rounded">
                                            <img src="@history.OverlayUrl" style="max-height:50px" />
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state py-4">
                <p class="text-muted mb-0">No progress records yet.</p>
            </div>
        }
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to Orders</a>

    <form id="deleteOrderForm" asp-controller="Orders" asp-action="Delete" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" id="deleteOrderBtn" class="btn btn-outline-danger">
            Delete Order
        </button>
    </form>
</div>

<div id="deleteModal" class="delete-modal">
    <div class="delete-modal-card">
        <h4>Delete Order</h4>
        <p>Are you sure you want to delete this order?<br><strong>This action cannot be undone.</strong></p>
        <div class="delete-modal-actions">
            <button type="button" id="cancelDelete" class="btn-cancel">Cancel</button>
            <button type="button" id="confirmDelete" class="btn-danger">Delete</button>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('deleteOrderForm');
    const deleteBtn = document.getElementById('deleteOrderBtn');
    const modal = document.getElementById('deleteModal');
    const confirmBtn = document.getElementById('confirmDelete');
    const cancelBtn = document.getElementById('cancelDelete');

    deleteBtn.addEventListener('click', function (e) {
        e.preventDefault();
        modal.style.display = 'flex';
    });

    cancelBtn.addEventListener('click', function () {
        modal.style.display = 'none';
    });

    confirmBtn.addEventListener('click', function () {
        form.submit();
    });
});
</script>
}

<style>
.delete-modal{position:fixed;inset:0;background:rgba(0,0,0,.45);display:none;align-items:center;justify-content:center;z-index:9999}
.delete-modal-card{background:#fff;border-radius:12px;padding:24px;width:100%;max-width:420px;box-shadow:0 20px 50px rgba(0,0,0,.25)}
.delete-modal-actions{display:flex;justify-content:flex-end;gap:10px}
.btn-cancel{background:#e5e7eb;border:none;padding:8px 16px;border-radius:6px}
.btn-danger{background:#dc2626;color:#fff;border:none;padding:8px 16px;border-radius:6px}
</style>
