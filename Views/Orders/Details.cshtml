@model CarpetProgressTracker.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="page-header">
    <div>
        <h1 class="page-title">@Model.OrderNumber</h1>
        <div class="mt-1">
            @if (Model.ProgressMode == "overlay")
            {
                <span class="badge badge-overlay">Overlay Mode</span>
            }
            else
            {
                <span class="badge badge-diff">Diff Mode</span>
            }
        </div>
    </div>
    <div class="action-buttons">
        <a asp-controller="Progress" asp-action="Draw" asp-route-orderId="@Model.Id" class="btn btn-success">Draw Progress</a>
        <a asp-controller="Progress" asp-action="Upload" asp-route-orderId="@Model.Id" class="btn btn-info">Upload Progress</a>
        <a asp-controller="Compare" asp-action="Index" asp-route-orderId="@Model.Id" class="btn btn-warning">Compare</a>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">Current Progress</div>
            <div class="card-body stat-card">
                <div class="stat-value @(Model.CurrentProgress >= 100 ? "text-success" : Model.CurrentProgress >= 50 ? "text-primary" : "text-warning")">
                    @Model.CurrentProgress%
                </div>
                <div class="stat-label mb-3">Completion</div>
                <div class="progress progress-lg">
                    @if (Model.CurrentProgress >= 100)
                    {
                        <div class="progress-bar bg-success" style="width: @Model.CurrentProgress%">@Model.CurrentProgress%</div>
                    }
                    else
                    {
                        <div class="progress-bar" style="width: @Model.CurrentProgress%">@Model.CurrentProgress%</div>
                    }
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Order Information</div>
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tr>
                        <td class="text-muted">Order Number</td>
                        <td class="fw-bold">@Model.OrderNumber</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Dimensions</td>
                        <td>@Model.StandardWidth Ã— @Model.StandardHeight px</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Total Pixels</td>
                        <td>@Model.TotalPixels.ToString("N0")</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Created</td>
                        <td>@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Updated</td>
                        <td>@Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">Base Image</div>
                    <div class="card-body text-center p-4">
                        @if (!string.IsNullOrEmpty(Model.BaseImageUrl))
                        {
                            <img src="@Model.BaseImageUrl" class="img-fluid rounded" alt="Base Image" />
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">Current Progress (Overlay)</div>
                    <div class="card-body text-center p-4">
                        @if (!string.IsNullOrEmpty(Model.CurrentOverlayUrl))
                        {
                            <div class="checkerboard-bg rounded">
                                <img src="@Model.CurrentOverlayUrl" class="img-fluid rounded" alt="Current Overlay" />
                            </div>
                        }
                        else
                        {
                            <div class="overlay-placeholder rounded">
                                <div class="empty-state py-4">
                                    <div class="empty-state-icon">ðŸŽ¨</div>
                                    <h5>No Overlay Yet</h5>
                                    <p class="text-muted mb-3">Start tracking progress by drawing or uploading.</p>
                                    <a asp-controller="Progress" asp-action="Draw" asp-route-orderId="@Model.Id" class="btn btn-success">Start Drawing</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Progress History</span>
        <a asp-controller="Compare" asp-action="History" asp-route-orderId="@Model.Id" class="btn btn-sm btn-outline-light">View Full Timeline</a>
    </div>
    <div class="card-body p-0">
        @if (Model.ProgressHistories.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Progress</th>
                            <th style="width: 40%;">Visual</th>
                            <th>Preview</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var history in Model.ProgressHistories.Take(5))
                        {
                            <tr>
                                <td>@history.RecordedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td class="fw-bold">@history.ProgressPercentage%</td>
                                <td>
                                    <div class="progress">
                                        @if (history.ProgressPercentage >= 100)
                                        {
                                            <div class="progress-bar bg-success" style="width: @history.ProgressPercentage%">@history.ProgressPercentage%</div>
                                        }
                                        else
                                        {
                                            <div class="progress-bar" style="width: @history.ProgressPercentage%">@history.ProgressPercentage%</div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(history.OverlayUrl))
                                    {
                                        <div class="checkerboard-bg-sm rounded" style="display: inline-block;">
                                            <img src="@history.OverlayUrl" class="thumbnail" alt="Overlay" style="max-height: 50px;" />
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state py-4">
                <p class="text-muted mb-0">No progress records yet. Start tracking to see history.</p>
            </div>
        }
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to Orders</a>
    <form id="deleteOrderForm" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this order? This action cannot be undone.');">Delete Order</button>
    </form>
</div>

@section Scripts {
<script>
(function() {
    var form = document.getElementById('deleteOrderForm');
    if (!form) return;

    form.addEventListener('submit', function(e) {
        var ok = window.confirm('Are you sure you want to delete this order? This action cannot be undone.');
        if (!ok) {
            e.preventDefault();
            e.stopPropagation();
        }
    });
})();
</script>
}
