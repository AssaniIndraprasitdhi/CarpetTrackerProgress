@{
    ViewData["Title"] = "Create Order";
}

<div class="page-header">
    <h1 class="page-title">Create New Order</h1>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">Order Details</div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data" data-loading="Creating order...">
                    @Html.AntiForgeryToken()

                    <div class="mb-4">
                        <label for="orderNumber" class="form-label">Order Number</label>
                        <input type="text" class="form-control" id="orderNumber" name="orderNumber" placeholder="Enter order number" required />
                        @if (ViewContext.ModelState["orderNumber"]?.Errors.Count > 0)
                        {
                            <div class="text-danger mt-1" style="font-size: 0.875rem;">@ViewContext.ModelState["orderNumber"]?.Errors[0].ErrorMessage</div>
                        }
                    </div>

                    <div class="mb-4">
                        <label for="baseImage" class="form-label">Base Image</label>
                        <input type="file" class="form-control" id="baseImage" name="baseImage" accept="image/*" required />
                        @if (ViewContext.ModelState["baseImage"]?.Errors.Count > 0)
                        {
                            <div class="text-danger mt-1" style="font-size: 0.875rem;">@ViewContext.ModelState["baseImage"]?.Errors[0].ErrorMessage</div>
                        }
                        <div class="form-text">This image defines the standard width and height for all progress tracking.</div>
                    </div>

                    <div class="mb-4">
                        <label for="progressMode" class="form-label">Progress Mode</label>
                        <select class="form-select" id="progressMode" name="progressMode">
                            <option value="overlay" selected>Overlay (Draw on transparent layer)</option>
                            <option value="upload_diff">Upload Diff (Compare uploaded images)</option>
                        </select>
                        <div class="form-text">
                            <strong style="color: var(--gray-700);">Overlay:</strong> Mark progress by drawing. <strong style="color: var(--gray-700);">Diff:</strong> Compare photos to detect changes.
                        </div>
                    </div>

                    <div id="imagePreviewContainer" style="display: none;" class="mb-4">
                        <label class="form-label">Preview</label>
                        <div style="background: var(--gray-100); border: 1px solid var(--gray-200); border-radius: var(--radius); padding: 1.5rem; text-center;">
                            <img id="imagePreview" class="image-preview" />
                        </div>
                        <div id="imageDimensions" class="form-text text-center mt-2"></div>
                    </div>

                    <div class="d-flex gap-3 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg">Create Order</button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">Information</div>
            <div class="card-body">
                <h5 style="font-weight: 700; color: var(--gray-800); margin-bottom: 1.25rem;">About Progress Modes</h5>

                <div class="mb-4" style="padding: 1.25rem; background: var(--info-light); border-radius: var(--radius);">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge badge-overlay">Overlay Mode</span>
                    </div>
                    <p style="color: var(--gray-600); font-size: 0.9375rem; line-height: 1.6; margin: 0;">
                        Draw directly on a transparent canvas layer. Pixels with alpha &gt; 10 are counted as completed.
                        Best for marking specific areas as done.
                    </p>
                </div>

                <div style="padding: 1.25rem; background: var(--warning-light); border-radius: var(--radius);">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge badge-diff">Diff Mode</span>
                    </div>
                    <p style="color: var(--gray-600); font-size: 0.9375rem; line-height: 1.6; margin: 0;">
                        Upload progress photos and compare against the base image.
                        Pixels where color distance &gt; 30 are counted as completed.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.getElementById('baseImage').addEventListener('change', function(e) {
    var file = e.target.files[0];
    if (file) {
        var reader = new FileReader();
        reader.onload = function(e) {
            var img = document.getElementById('imagePreview');
            img.src = e.target.result;
            document.getElementById('imagePreviewContainer').style.display = 'block';

            var tempImg = new Image();
            tempImg.onload = function() {
                document.getElementById('imageDimensions').textContent =
                    'Dimensions: ' + tempImg.width + ' Ã— ' + tempImg.height + ' pixels';
            };
            tempImg.src = e.target.result;
        };
        reader.readAsDataURL(file);
    }
});
</script>
}
