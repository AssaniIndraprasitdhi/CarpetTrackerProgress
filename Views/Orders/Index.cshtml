@model List<CarpetProgressTracker.Models.Order>
@{
    ViewData["Title"] = "Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Orders</h1>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">No orders found. Create your first order to get started.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Order Number</th>
                <th>Base Image</th>
                <th>Dimensions</th>
                <th>Mode</th>
                <th>Progress</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td><strong>@order.OrderNumber</strong></td>
                    <td>
                        @if (!string.IsNullOrEmpty(order.BaseImageUrl))
                        {
                            <img src="@order.BaseImageUrl" class="thumbnail" alt="Base Image" />
                        }
                    </td>
                    <td>@order.StandardWidth x @order.StandardHeight</td>
                    <td>
                        <span class="badge @(order.ProgressMode == "overlay" ? "bg-info" : "bg-warning")">
                            @order.ProgressMode
                        </span>
                    </td>
                    <td>
                        <div class="progress" style="min-width: 100px;">
                            <div class="progress-bar @(order.CurrentProgress >= 100 ? "bg-success" : "bg-primary")"
                                 style="width: @order.CurrentProgress%">
                                @order.CurrentProgress%
                            </div>
                        </div>
                    </td>
                    <td>@order.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">Details</a>
                        <a asp-controller="Progress" asp-action="Draw" asp-route-orderId="@order.Id" class="btn btn-sm btn-outline-success">Draw</a>
                        <a asp-controller="Progress" asp-action="Upload" asp-route-orderId="@order.Id" class="btn btn-sm btn-outline-info">Upload</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
