@model List<CarpetProgressTracker.Models.Order>
@{
    ViewData["Title"] = "Orders";
}

<div class="page-header">
    <h1 class="page-title">Orders</h1>
    <a asp-action="Create" class="btn btn-primary">+ Create New Order</a>
</div>

@if (Model.Count == 0)
{
    <div class="card">
        <div class="card-body empty-state">
            <div class="empty-state-icon">ðŸ“‹</div>
            <h4>No Orders Yet</h4>
            <p class="text-muted mb-4">Create your first order to start tracking carpet progress.</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">+ Create New Order</a>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Order Number</th>
                            <th>Preview</th>
                            <th>Dimensions</th>
                            <th>Mode</th>
                            <th>Progress</th>
                            <th>Last Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@order.Id" class="fw-bold text-decoration-none">
                                        @order.OrderNumber
                                    </a>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(order.BaseImageUrl))
                                    {
                                        <img src="@order.BaseImageUrl" class="thumbnail" alt="Base Image" />
                                    }
                                </td>
                                <td>
                                    <span class="text-muted">@order.StandardWidth Ã— @order.StandardHeight</span>
                                </td>
                                <td>
                                    @if (order.ProgressMode == "overlay")
                                    {
                                        <span class="badge badge-overlay">Overlay</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-diff">Diff</span>
                                    }
                                </td>
                                <td style="min-width: 150px;">
                                    <div class="progress">
                                        @if (order.CurrentProgress >= 100)
                                        {
                                            <div class="progress-bar bg-success" style="width: @order.CurrentProgress%">
                                                @order.CurrentProgress%
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="progress-bar" style="width: @order.CurrentProgress%">
                                                @order.CurrentProgress%
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">@order.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">View</a>
                                        <a asp-controller="Progress" asp-action="Draw" asp-route-orderId="@order.Id" class="btn btn-sm btn-success">Draw</a>
                                        <a asp-controller="Progress" asp-action="Upload" asp-route-orderId="@order.Id" class="btn btn-sm btn-info">Upload</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
