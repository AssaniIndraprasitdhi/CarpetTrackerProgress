@model List<CarpetProgressTracker.Models.ProgressHistory>
@{
    ViewData["Title"] = "Progress Timeline";
    var order = (CarpetProgressTracker.Models.Order)ViewBag.Order;
}

<div class="page-header">
    <div>
        <h1 class="page-title">Progress Timeline</h1>
        <p class="text-muted mb-0">@order.OrderNumber â€¢ @Model.Count records</p>
    </div>
    <div class="action-buttons">
        <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-secondary">Back to Order</a>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">Current Progress</div>
            <div class="card-body stat-card">
                <div class="stat-value @(order.CurrentProgress >= 100 ? "text-success" : order.CurrentProgress >= 50 ? "text-primary" : "text-warning")">
                    @order.CurrentProgress%
                </div>
                <div class="stat-label mb-3">Completion</div>
                <div class="progress progress-lg">
                    @if (order.CurrentProgress >= 100)
                    {
                        <div class="progress-bar bg-success" style="width: @order.CurrentProgress%">@order.CurrentProgress%</div>
                    }
                    else
                    {
                        <div class="progress-bar" style="width: @order.CurrentProgress%">@order.CurrentProgress%</div>
                    }
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Order Details</div>
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tr>
                        <td class="text-muted">Order</td>
                        <td class="fw-bold">@order.OrderNumber</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Dimensions</td>
                        <td>@order.StandardWidth Ã— @order.StandardHeight</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card h-100">
            <div class="card-header">Base Image</div>
            <div class="card-body text-center p-4">
                <img src="@order.BaseImageUrl" class="img-fluid rounded" style="max-height: 250px;" alt="Base" />
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Timeline</span>
        <span class="badge bg-light text-dark">@Model.Count records</span>
    </div>
    <div class="card-body p-0">
        @if (Model.Count == 0)
        {
            <div class="empty-state">
                <div class="empty-state-icon">ðŸ“Š</div>
                <h5>No Records Yet</h5>
                <p class="text-muted mb-3">Start tracking progress to build your timeline.</p>
                <a asp-controller="Progress" asp-action="Draw" asp-route-orderId="@order.Id" class="btn btn-success">Start Drawing</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th style="width: 60px;">#</th>
                            <th>Date & Time</th>
                            <th style="width: 150px;">Progress</th>
                            <th style="width: 35%;">Visual</th>
                            <th>Preview</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var index = Model.Count;
                            decimal? previousProgress = null;
                        }
                        @foreach (var record in Model)
                        {
                            var change = previousProgress.HasValue ? record.ProgressPercentage - previousProgress.Value : 0;
                            <tr>
                                <td class="text-muted">@index</td>
                                <td>@record.RecordedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    <span class="fw-bold">@record.ProgressPercentage%</span>
                                    @if (previousProgress.HasValue && change != 0)
                                    {
                                        <span class="@(change > 0 ? "text-success" : "text-danger") small ms-1">
                                            (@(change > 0 ? "+" : "")@change%)
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="progress">
                                        @if (record.ProgressPercentage >= 100)
                                        {
                                            <div class="progress-bar bg-success" style="width: @record.ProgressPercentage%">@record.ProgressPercentage%</div>
                                        }
                                        else
                                        {
                                            <div class="progress-bar" style="width: @record.ProgressPercentage%">@record.ProgressPercentage%</div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(record.ImageUrl))
                                    {
                                        <a href="@record.ImageUrl" target="_blank">
                                            <img src="@record.ImageUrl" class="thumbnail" alt="Progress @index" />
                                        </a>
                                    }
                                </td>
                            </tr>
                            previousProgress = record.ProgressPercentage;
                            index--;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="d-flex gap-2 mt-4">
    <a asp-controller="Progress" asp-action="Draw" asp-route-orderId="@order.Id" class="btn btn-success">Draw Progress</a>
    <a asp-controller="Progress" asp-action="Upload" asp-route-orderId="@order.Id" class="btn btn-info">Upload Progress</a>
    <a asp-controller="Compare" asp-action="Index" asp-route-orderId="@order.Id" class="btn btn-warning">Compare</a>
</div>
