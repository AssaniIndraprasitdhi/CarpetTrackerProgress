@model CarpetProgressTracker.Models.Order
@{
    ViewData["Title"] = "Compare";
    var isOverlay = Model.ProgressMode == "overlay";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Compare Images</h1>
        <p class="text-muted mb-0">@Model.OrderNumber • @Model.StandardWidth × @Model.StandardHeight pixels</p>
    </div>
    <div class="action-buttons">
        <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Back to Order</a>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">Base Image</div>
            <div class="card-body text-center p-4">
                <img src="@Model.BaseImageUrl" class="img-fluid rounded" alt="Base Image" />
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header">Upload for Comparison</div>
            <div class="card-body">
                <form asp-action="Compare" method="post" enctype="multipart/form-data" data-loading="Comparing images...">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="orderId" value="@Model.Id" />

                    <div class="mb-4">
                        <label for="compareImage" class="form-label">Select Image</label>
                        <input type="file" class="form-control" id="compareImage" name="compareImage" accept="image/*" required />
                    </div>

                    <div class="mb-4">
                        <label for="mode" class="form-label">Comparison Mode</label>
                        <select class="form-select" id="mode" name="mode">
                            @if (isOverlay)
                            {
                                <option value="overlay" selected>Overlay (Alpha &gt; 10)</option>
                                <option value="upload_diff">Color Diff (Distance &gt; 30)</option>
                            }
                            else
                            {
                                <option value="overlay">Overlay (Alpha &gt; 10)</option>
                                <option value="upload_diff" selected>Color Diff (Distance &gt; 30)</option>
                            }
                        </select>
                        <div class="form-text mt-2">
                            <span class="badge badge-overlay me-1">Overlay</span> Counts pixels with alpha &gt; 10<br class="d-block mt-1" />
                            <span class="badge badge-diff me-1">Diff</span> Counts pixels where color distance &gt; 30
                        </div>
                    </div>

                    <div id="comparePreviewContainer" style="display: none;" class="mb-4">
                        <label class="form-label">Preview</label>
                        <div class="border rounded p-3 bg-light text-center">
                            <img id="comparePreview" class="img-fluid rounded" style="max-height: 200px;" />
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning btn-lg">Compare Images</button>
                        <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Current Progress</div>
            <div class="card-body stat-card">
                <div class="stat-value @(Model.CurrentProgress >= 100 ? "text-success" : Model.CurrentProgress >= 50 ? "text-primary" : "text-warning")">
                    @Model.CurrentProgress%
                </div>
                <div class="stat-label mb-3">
                    @if (isOverlay)
                    {
                        <span class="badge badge-overlay">Overlay Mode</span>
                    }
                    else
                    {
                        <span class="badge badge-diff">Diff Mode</span>
                    }
                </div>
                <div class="progress progress-lg">
                    @if (Model.CurrentProgress >= 100)
                    {
                        <div class="progress-bar bg-success" style="width: @Model.CurrentProgress%">@Model.CurrentProgress%</div>
                    }
                    else
                    {
                        <div class="progress-bar" style="width: @Model.CurrentProgress%">@Model.CurrentProgress%</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.getElementById('compareImage').addEventListener('change', function(e) {
    var file = e.target.files[0];
    if (file) {
        var reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('comparePreview').src = e.target.result;
            document.getElementById('comparePreviewContainer').style.display = 'block';
        };
        reader.readAsDataURL(file);
    }
});
</script>
}
