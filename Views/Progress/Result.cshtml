@model CarpetProgressTracker.Models.Order
@{
    ViewData["Title"] = "Progress Result";
    var progress = (decimal)ViewBag.Progress;
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="page-header">
            <div>
                <h1 class="page-title">Progress Updated</h1>
                <p class="text-muted mb-0">@Model.OrderNumber</p>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-body stat-card py-5">
                <div class="stat-value @(progress >= 100 ? "text-success" : progress >= 50 ? "text-primary" : "text-warning")" style="font-size: 5rem;">
                    @progress%
                </div>
                <div class="stat-label mb-4">Progress Calculated</div>

                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="progress progress-lg">
                            @if (progress >= 100)
                            {
                                <div class="progress-bar bg-success" style="width: @progress%">@progress%</div>
                            }
                            else
                            {
                                <div class="progress-bar" style="width: @progress%">@progress%</div>
                            }
                        </div>
                    </div>
                </div>

                @if (progress >= 100)
                {
                    <div class="alert alert-success mt-4 mx-auto" style="max-width: 400px;">
                        <strong>Completed!</strong> This order has reached 100% progress.
                    </div>
                }
                else if (progress >= 75)
                {
                    <div class="alert alert-info mt-4 mx-auto" style="max-width: 400px;">
                        <strong>Almost there!</strong> Great progress on this order.
                    </div>
                }
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">Base Image</div>
                    <div class="card-body text-center p-4">
                        <img src="@Model.BaseImageUrl" class="img-fluid rounded" alt="Base" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">Progress Image</div>
                    <div class="card-body text-center p-4">
                        <img src="@Model.CurrentImageUrl" class="img-fluid rounded" alt="Progress" />
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center gap-2 flex-wrap">
            <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">View Order Details</a>
            <a asp-action="Draw" asp-route-orderId="@Model.Id" class="btn btn-success btn-lg">Continue Drawing</a>
            <a asp-action="Upload" asp-route-orderId="@Model.Id" class="btn btn-info btn-lg">Upload Another</a>
        </div>
    </div>
</div>
