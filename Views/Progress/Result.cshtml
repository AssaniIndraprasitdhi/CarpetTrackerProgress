@model CarpetProgressTracker.Models.Order
@{
    ViewData["Title"] = "Progress Result";
    var progress = (decimal)ViewBag.Progress;
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="page-header">
            <div>
                <h1 class="page-title">Progress Updated</h1>
                <p style="color: var(--gray-500); font-size: 0.9375rem; margin: 0.25rem 0 0 0;">@Model.OrderNumber</p>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-body stat-card" style="padding: 3rem 2rem;">
                <div class="stat-value @(progress >= 100 ? "text-success" : progress >= 50 ? "text-primary" : "text-warning")" style="font-size: 4.5rem; line-height: 1;">
                    @progress%
                </div>
                <div class="stat-label" style="margin-bottom: 1.5rem;">Progress Calculated</div>

                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="progress progress-lg">
                            @if (progress >= 100)
                            {
                                <div class="progress-bar bg-success" style="width: @progress%">@progress%</div>
                            }
                            else
                            {
                                <div class="progress-bar" style="width: @progress%">@progress%</div>
                            }
                        </div>
                    </div>
                </div>

                @if (progress >= 100)
                {
                    <div class="mt-4 mx-auto" style="max-width: 400px; background: var(--success-light); color: var(--success); padding: 1rem 1.25rem; border-radius: var(--radius); font-size: 0.9375rem;">
                        <strong>Completed!</strong> This order has reached 100% progress.
                    </div>
                }
                else if (progress >= 75)
                {
                    <div class="mt-4 mx-auto" style="max-width: 400px; background: var(--info-light); color: var(--info); padding: 1rem 1.25rem; border-radius: var(--radius); font-size: 0.9375rem;">
                        <strong>Almost there!</strong> Great progress on this order.
                    </div>
                }
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">Base Image</div>
                    <div class="card-body text-center" style="padding: 1.5rem;">
                        <div style="background: var(--gray-100); border-radius: var(--radius); padding: 1rem; display: inline-block;">
                            <img src="@Model.BaseImageUrl" class="img-fluid rounded" alt="Base" style="max-height: 300px;" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">Progress Overlay</div>
                    <div class="card-body text-center" style="padding: 1.5rem;">
                        @if (!string.IsNullOrEmpty(Model.CurrentOverlayUrl))
                        {
                            <div style="background: #fff; border-radius: var(--radius); padding: 1rem; display: inline-block; box-shadow: inset 0 0 0 1px var(--gray-200);">
                                <img src="@Model.CurrentOverlayUrl" class="img-fluid rounded" alt="Progress Overlay" style="max-height: 300px;" />
                            </div>
                        }
                        else
                        {
                            <div style="background: var(--gray-100); border-radius: var(--radius); padding: 3rem 2rem;">
                                <p style="color: var(--gray-500); margin: 0;">No overlay available</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">View Order Details</a>
            <a asp-action="Draw" asp-route-orderId="@Model.Id" class="btn btn-success btn-lg">Continue Drawing</a>
            <a asp-action="Upload" asp-route-orderId="@Model.Id" class="btn btn-info btn-lg">Upload Another</a>
        </div>
    </div>
</div>
