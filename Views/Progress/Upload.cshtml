@model CarpetProgressTracker.Models.Order
@{
    ViewData["Title"] = "Upload Progress";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Upload Progress</h1>
        <p class="text-muted mb-0">@Model.OrderNumber • @Model.StandardWidth × @Model.StandardHeight pixels</p>
    </div>
    <div class="action-buttons">
        <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Back to Order</a>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">Base Image</div>
            <div class="card-body text-center p-4">
                <img src="@Model.BaseImageUrl" class="img-fluid rounded" alt="Base Image" />
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header">Upload Progress Image</div>
            <div class="card-body">
                <form asp-action="SubmitUpload" method="post" enctype="multipart/form-data" data-loading="Uploading and calculating...">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="orderId" value="@Model.Id" />

                    <div class="mb-4">
                        <label for="uploadedImage" class="form-label">Select Image</label>
                        <input type="file" class="form-control" id="uploadedImage" name="uploadedImage" accept="image/*" required />
                        <div class="form-text">Image will be resized to @Model.StandardWidth × @Model.StandardHeight if needed.</div>
                    </div>

                    <div id="previewContainer" style="display: none;" class="mb-4">
                        <label class="form-label">Preview</label>
                        <div class="border rounded p-3 bg-light text-center">
                            <img id="uploadPreview" class="img-fluid rounded" style="max-height: 250px;" />
                        </div>
                        <div id="uploadDimensions" class="form-text text-center mt-2"></div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success btn-lg">Calculate Progress</button>
                        <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Current Progress</div>
            <div class="card-body stat-card">
                <div class="stat-value @(Model.CurrentProgress >= 100 ? "text-success" : Model.CurrentProgress >= 50 ? "text-primary" : "text-warning")">
                    @Model.CurrentProgress%
                </div>
                <div class="stat-label mb-3">Completion</div>
                <div class="progress progress-lg">
                    @if (Model.CurrentProgress >= 100)
                    {
                        <div class="progress-bar bg-success" style="width: @Model.CurrentProgress%">@Model.CurrentProgress%</div>
                    }
                    else
                    {
                        <div class="progress-bar" style="width: @Model.CurrentProgress%">@Model.CurrentProgress%</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.getElementById('uploadedImage').addEventListener('change', function(e) {
    var file = e.target.files[0];
    if (file) {
        var reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('uploadPreview').src = e.target.result;
            document.getElementById('previewContainer').style.display = 'block';

            var img = new Image();
            img.onload = function() {
                var text = 'Dimensions: ' + img.width + ' × ' + img.height;
                if (img.width !== @Model.StandardWidth || img.height !== @Model.StandardHeight) {
                    text += ' (will be resized to @Model.StandardWidth × @Model.StandardHeight)';
                }
                document.getElementById('uploadDimensions').textContent = text;
            };
            img.src = e.target.result;
        };
        reader.readAsDataURL(file);
    }
});
</script>
}
